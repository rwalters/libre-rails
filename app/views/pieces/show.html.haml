.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", pieces_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_piece_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", piece_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.piece.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @piece.title
      %p
        %b
          = t("activerecord.attributes.piece.blurb", :default => t("activerecord.labels.blurb", :default => "Blurb"))
          \:
        = @piece.blurb
      %p
        %b
          = t("activerecord.attributes.piece.body", :default => t("activerecord.labels.body", :default => "Body"))
          \:
        = @piece.body
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_piece_path(@piece), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), piece_path(@piece), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
